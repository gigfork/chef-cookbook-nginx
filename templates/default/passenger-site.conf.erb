server {
  listen 80;
  root /var/www/empty;
  rewrite ^(.*) https://$host$1 permanent;
}

server {
  listen 443;
  server_name <%= @site_name %>;
  root /var/www/<%= @app_name %>/public;
  passenger_enabled on;
  rails_env <%= @erails_env %>;

  ssl on;
  ssl_certificate <%= @ssl_cert %>;
  ssl_certificate_key <%= @ssl_key %>;
  ssl_session_timeout 5m;
}
