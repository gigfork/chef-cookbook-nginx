upstream <%= node['nginx']['site']['sitename'] %> {
<%= if node['nginx']['site']['port_based'] then %>
<%= node['nginx']['site']['server_ports'].each do |port|
  server 127.0.0.1:<%= port %>  
<% end %>
<% else %>
  server unix:/tmp/<%= node['nginx']['site']['sitename'] fail_timeout=0;
<% end %>
}

server {
    listen 443;
    server_name node['fqdn'];
    root /var/www/apps/<%= node['nginx']['site']['sitename'] %>/current/public;
    
    ssl on;
    ssl_certificate <%= default['nginx']['site']['ssl_cert'] %>;
    ssl_certificate_key <%= default['nginx']['site']['ssl_key'];
    ssl_protocols SSLv3 TLSv1;
    ssl_ciphers ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
    keepalive_timeout    70;
    
    client_max_body_size 10M;
    client_body_buffer_size 128k;
    try_files $uri/index.html $uri.html $uri @app;
    
    location @app {
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_redirect off;

	    proxy_pass http://<%= node['nginx']['site']['sitename'] %>;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
      root /var/www/apps/<%= node['nginx']['site']['sitename'] %>/current/public;
    }
}


server {
  listen 80;
  root /var/www/empty;
  rewrite ^(.*) https://$host$1 permanent;
}
